<% layout('layout/boilerplate') %>
<title>YelpCamp</title>
<div class="container mt-5">
    <h1 class="text-center mb-4 text-white">Camp Grounds</h1>
    <div class="row g-4">
        <% for(let campground of campgrounds) { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-lg border-0 rounded-3 overflow-hidden h-100">
                    <div class="row g-0">
                        <div class="col-md-5">
                <%if(campground.images.length) {%>
                            <img class="img-fluid w-100 h-100 object-fit-cover" src="<%= campground.images[0].url %>" alt="Campground Image" style="height: 200px; object-fit: cover;">
                            <% }else {%>
                                <img class="img-fluid w-100 h-100 object-fit-cover" src=" https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png " alt="Campground Image" style="height: 200px; object-fit: cover;">
                                <% } %>
                        </div>
                        <div class="col-md-7 d-flex flex-column">
                            <div class="card-body d-flex flex-column justify-content-between h-100">
                                <div>
                                    <h5 class="card-title fw-bold text-primary"><%= campground.title %></h5>
                                    <p class="card-text text-muted small">Location: <%= campground.location %></p>
                                    <p class="card-text text-secondary"><%= campground.description.substring(0, 100) %>...</p>
                                </div>
                                <div>
                                    <a class="btn btn-outline-primary w-100 mt-3" href="/campgrounds/<%= campground.id %>">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
